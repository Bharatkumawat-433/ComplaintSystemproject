@page "{id:int}"
@model ComplaintSystem.Pages.EditComplaintModel
@{
    ViewData["Title"] = "Update Complaint";
}

<h3>Update Complaint Status (ID: @Model.Complaint.ComplaintId)</h3>
<hr />

<div class="row">
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-3">User</dt>
            <dd class="col-sm-9">@Model.Complaint.User.Name</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Complaint.User.Email</dd>
            
            <dt class="col-sm-3">Date</dt>
            <dd class="col-sm-9">@Model.Complaint.Date.ToString("dd-MMM-yyyy")</dd>
            
            <dt class="col-sm-3">Type</dt>
            <dd class="col-sm-9">@Model.Complaint.Type</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Complaint.Description</dd>
        </dl>
        
        <hr />

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" asp-for="Complaint.ComplaintId" />
            
            <div class="form-group mb-3">
                <label><strong>Status</strong></label>
                <select asp-for="Complaint.Status" class="form-control">
                    <option value="Pending">Pending</option>
                    <option value="In Progress">In Progress</option>
                    <option value="Resolved">Resolved</option>
                </select>
                <span asp-validation-for="Complaint.Status" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label><strong>Admin Remarks</strong> (Optional)</label>
                <textarea asp-for="Complaint.AdminRemarks" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Complaint.AdminRemarks" class="text-danger"></span>
            </div>
            
            <button type="submit" class="btn btn-success">Save Changes</button>
            <a asp-page="/AdminDashboard" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>







