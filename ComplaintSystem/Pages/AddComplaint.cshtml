@page
@model ComplaintSystem.Pages.AddComplaintModel
@{
    ViewData["Title"] = "Register Complaint";
}

<h3>Register a New Complaint</h3>
<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post">
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label>Complaint Type</label>
                <select asp-for="NewComplaint.Type" class="form-control">
                    <option value="">-- Select Type --</option>
                    <option value="Service">Service</option>
                    <option value="Maintenance">Maintenance</option>
                    <option value="Delivery Issue">Delivery Issue</option>
                    <option value="Other">Other</option>
                </select>
                <span asp-validation-for="NewComplaint.Type" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label>Description</label>
                <textarea asp-for="NewComplaint.Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="NewComplaint.Description" class="text-danger"></span>
            </div>
            
            <button type="submit" class="btn btn-primary">Submit Complaint</button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}