@page
@model ComplaintSystem.Pages.UserDashboardModel
@{
    ViewData["Title"] = "My Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>My Registered Complaints</h3>
    <a asp-page="/AddComplaint" class="btn btn-primary">Add New Complaint</a>
</div>

<hr />

@if (Model.Complaints == null || Model.Complaints.Count == 0)
{
    <p>You have not registered any complaints yet.</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Date</th>
                <th>Type</th>
                <th>Description</th>
                <th>Status</th>
                <th>Admin Remarks</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var complaint in Model.Complaints)
            {
                <tr>
                    <td>@complaint.ComplaintId</td>
                    <td>@complaint.Date.ToString("dd-MMM-yyyy")</td>
                    <td>@complaint.Type</td>
                    <td>@complaint.Description</td>
                    <td>
                        @if (complaint.Status == "Pending")
                        {
                            <span class="badge bg-warning text-dark">Pending</span>
                        }
                        else if (complaint.Status == "In Progress")
                        {
                            <span class="badge bg-info text-dark">In Progress</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Resolved</span>
                        }
                    </td>
                    <td>@complaint.AdminRemarks</td>
                </tr>
            }
        </tbody>
    </table>
}